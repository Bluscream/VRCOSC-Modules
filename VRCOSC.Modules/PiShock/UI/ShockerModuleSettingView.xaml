<UserControl x:Class="VRCOSC.Modules.PiShock.UI.ShockerModuleSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:core="clr-namespace:VRCOSC.App.UI.Core;assembly=VRCOSC.App"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <core:AlternatingColourConverter x:Key="AlternatingColourConverter" Colour1="{StaticResource CBackground3}"
                                         Colour2="{StaticResource CBackground2}" />
    </UserControl.Resources>
    <core:HeaderFooterListView AlternationCount="2" ItemsSource="{Binding Attribute}" ShouldTruncateHeight="False">
        <core:HeaderFooterListView.Header>
            <Border Grid.Row="0" Background="{StaticResource CBackground1}" Height="30">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Name"
                               Foreground="{StaticResource CForeground2}" FontSize="16" TextAlignment="Center"
                               VerticalAlignment="Center" />
                    <TextBlock Grid.Column="2" Text="Sharecode"
                               Foreground="{StaticResource CForeground2}" FontSize="16" TextAlignment="Center"
                               VerticalAlignment="Center" />
                </Grid>
            </Border>
        </core:HeaderFooterListView.Header>
        <ListView.ItemContainerStyle>
            <Style TargetType="ListViewItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Border
                                Background="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource AlternatingColourConverter}}">
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="5" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="5" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                             Text="{Binding Name.Value, UpdateSourceTrigger=PropertyChanged}"
                                             Background="{StaticResource CBackground5}"
                                             Foreground="{StaticResource CForeground1}" FontSize="16"
                                             HorizontalAlignment="Stretch"
                                             VerticalContentAlignment="Center"
                                             BorderThickness="0">
                                        <TextBox.Template>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="5" Padding="5 2">
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                  FontSize="{TemplateBinding FontSize}"
                                                                  VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </TextBox.Template>
                                    </TextBox>
                                    <TextBox Grid.Column="2"
                                             Text="{Binding Sharecode.Value, UpdateSourceTrigger=PropertyChanged}"
                                             Background="{StaticResource CBackground5}"
                                             Foreground="{StaticResource CForeground1}" FontSize="16"
                                             HorizontalAlignment="Stretch"
                                             VerticalContentAlignment="Center"
                                             BorderThickness="0">
                                        <TextBox.Template>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="5" Padding="5 2">
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                  FontSize="{TemplateBinding FontSize}"
                                                                  VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </TextBox.Template>
                                    </TextBox>
                                    <core:IconButton Grid.Column="4" ButtonColour="Red"
                                                       Click="RemoveButton_OnClick"
                                                       Height="25" Width="25" Icon="Solid_Minus">
                                        <core:IconButton.Tag>
                                            <Binding />
                                        </core:IconButton.Tag>
                                    </core:IconButton>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ListView.ItemContainerStyle>
        <core:HeaderFooterListView.Footer>
            <Border Grid.Row="2" Background="{StaticResource CBackground1}" Height="30">
                <core:IconButton Width="90" Height="20" Click="AddButton_OnClick" ButtonColour="Green" Icon="Solid_Plus"/>
            </Border>
        </core:HeaderFooterListView.Footer>
    </core:HeaderFooterListView>
</UserControl>
